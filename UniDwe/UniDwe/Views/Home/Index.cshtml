@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        html {
            scroll-behavior: smooth;
        }

        body, html {
            margin: 0;
            padding: 0;
            font-family: 'Merriweather', serif;
        }

        .hero-section {
            position: relative;
            height: 100vh;
            width: 100vw;
            background: url('/backround/newhd.webp') no-repeat center center;
            background-size: cover;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: white;
        }

            .hero-section::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.55);
                z-index: 1;
            }

        .hero-content {
            position: relative;
            z-index: 2;
            max-width: 800px;
            padding: 0 20px;
        }

            .hero-content h1 {
                font-size: 4.5rem;
                font-weight: 500;
                color: white;
                text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
                margin-bottom: 20px;
            }

            .hero-content p {
                font-size: 1.3rem;
                font-weight: 300;
                color: #eaeaea;
                text-shadow: 0 1px 2px rgba(0, 0, 0, 0.4);
            }

        .project-presentation-section,
        .about-project-section {
            min-height: 100vh;
            padding: 100px 20px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            opacity: 0;
            transform: translateY(40px);
            transition: all 0.8s ease-in-out;
        }

            .project-presentation-section.visible,
            .about-project-section.visible {
                opacity: 1;
                transform: translateY(0);
            }

        .project-presentation-section {
            background-color: #fefaf7;
        }

        .about-project-section {
            background-color: #1b1b1b;
        }

        .presentation-container {
            display: flex;
            flex-wrap: wrap;
            gap: 60px;
            max-width: 1400px;
            width: 100%;
            align-items: center;
            justify-content: space-between;
        }

        .presentation-text,
        .presentation-image,
        .additional-image,
        .additional-text {
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.8s ease-in-out;
        }

            .presentation-text.animate-left,
            .presentation-image.animate-right,
            .additional-image.visible,
            .additional-text.visible {
                opacity: 1;
                transform: translateY(0);
            }

        .presentation-text {
            flex: 1 1 500px;
            transform: translateX(-50px);
        }

            .presentation-text h2 {
                font-size: 3rem;
                color: #222;
                margin-bottom: 25px;
            }

        .about-project-section .presentation-text h2,
        .additional-text h2 {
            color: #faf8f5;
        }

        .presentation-text p,
        .additional-text p {
            font-size: 1.2rem;
            color: #444;
        }

        .about-project-section .presentation-text p,
        .about-project-section .additional-text p {
            color: #eae6e0;
        }

        .presentation-image,
        .additional-image {
            flex: 0 1 620px;
            position: relative;
            z-index: 1;
            transform: translateX(50px);
        }

            .presentation-image::before {
                content: "";
                position: absolute;
                top: -20px;
                left: -20px;
                right: -20px;
                bottom: -20px;
                background: linear-gradient(135deg, #f4ede7, #fefcf9);
                border-radius: 16px;
                z-index: -1;
                filter: blur(25px);
                opacity: 0.8;
            }

            .presentation-image img {
                width: 100%;
                border-radius: 12px;
                box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            }

            .additional-image img {
                width: 100%;
                border-radius: 12px;
                margin-top: 60px;
            }

        .additional-text {
            margin-top: 30px;
            max-width: 900px;
        }

        .news-updates-section {
            min-height: 100vh;
            background: url('/backround/1.jpg') no-repeat center center;
            background-size: cover;
            padding: 100px 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 30px;
            position: relative;
        }

        .news-header {
            width: 100%;
            max-width: 1400px;
            margin: 0 auto;
            padding-left: 20px;
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.8s ease-in-out;
        }

            .news-header.visible {
                opacity: 1;
                transform: translateY(0);
            }

        .news-title {
            font-family: 'Playfair Display', serif;
            font-size: 3rem;
            font-weight: 600;
            color: #fff;
            text-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
        }

        .news-cards-wrapper {
            display: flex;
            gap: 30px;
            flex-wrap: wrap;
            justify-content: center;
            margin-top: 40px;
        }

        .news-card {
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(8px);
            border-radius: 16px;
            padding: 20px;
            max-width: 320px;
            text-align: center;
            transition: all 0.6s ease;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
            opacity: 0;
            transform: translateY(20px);
        }

            .news-card.visible {
                opacity: 1;
                transform: translateY(0);
            }

            .news-card img {
                width: 100%;
                border-radius: 12px;
                margin-bottom: 15px;
            }

            .news-card p,
            .news-card a {
                color: #f3f3f3;
                font-size: 1rem;
                margin-bottom: 10px;
                display: block;
            }

            .news-card a {
                color: #ffdca8;
                text-decoration: none;
            }

                .news-card a:hover {
                    text-decoration: underline;
                }

        media (max-width: 900px) {
            .presentation-container

        {
            flex-direction: column;
            align-items: center;
        }

        .news-cards-wrapper {
            flex-direction: column;
            align-items: center;
        }

        .news-card {
            width: 90%;
        }

        }
    </style>
}

<div class="hero-section">
    <div class="hero-content">
        <h1>WTO Chairs Programme</h1>
        <p>The University of World Economy and Diplomacy — part of the global WTO Chairs network, advancing trade research, education, and policy dialogue in Uzbekistan.</p>
    </div>
</div>

<section id="project-presentation" class="project-presentation-section">
    <div class="presentation-container">
        <div class="presentation-text">
            <h2>Project Presentation</h2>
            <p>Our mission is to promote trade research, education, and policy dialogue in Uzbekistan through collaborative initiatives, expert contributions, and international partnerships. Explore our goals, methodology, and academic activities that support WTO values.</p>
        </div>
        <div class="presentation-image">
            <img src="/backround/2.JPG" alt="Project Team">
        </div>
    </div>
</section>

<section id="news-updates" class="news-updates-section">
    <div class="news-header">
        <h2 class="news-title">News and Updates</h2>
    </div>
    <div class="news-cards-wrapper">
        <div class="news-card">
            <img src="/backround/photo_2025-05-21_10-19-26.jpg" alt="News Card 1">
        </div>
        <div class="news-card">
            <img src="/backround/photo_2025-05-25_13-50-46.jpg" alt="News Card 2">
        </div>
    </div>
</section>

<section id="about-project" class="about-project-section">
    <div class="presentation-container">
        <div class="presentation-text">
            <h2>About the Project</h2>
            <p>
                The WTO Chairs Programme was launched in 2010. The WTO Chairs Programme aims to support trade-related academic activities by universities and research institutions to support and advise policymakers and other stakeholders in developing and least-developed countries. A total of 14 institutions were selected as WTO Chairs for the first four-year term. An additional seven institutions were selected for Phase 2 of the Programme in 2014. Phase 3 of the programme started with a selection process in December 2020, which resulted in 17 institutions being chosen to join the network of Chairs. This further diversifies the Programme's representation across the globe, with the network now comprising 36 universities. The main objectives of the Programme are to: Promote research in trade-related matters and highlight policy relevance; Support the development and delivery of courses on international trade and provide teaching support; Encourage outreach activities; Collate information and promote knowledge sharing on international trade; Establish a network of engaged academics.
            </p>
        </div>
        <div class="presentation-image">
            <img src="/backround/photo_2023-02-07_01-04-36.jpg" alt="About WTO Project">
        </div>
    </div>

    <div class="additional-image">
        <img src="/backround/45.jpg" alt="WTO Session">
    </div>

    <div class="additional-text">
        <p>
            The UWED WTO Chair implements three main activities: Transferring advanced knowledge on the WTO and international trade to the Uzbek audience through updating existing courses, implementing new courses, and organizing an annual short summer training course for practitioners at the UWED; Increasing research capacity in the field of WTO standards and WTO law by leading specific research, providing methodological support to young researchers, and concentrating human resources by increasing connectivity among researchers from various disciplines; Fostering dialogue among academics, policymakers, public servants, and civil society institutions by encouraging open debate, discussion, and reflection on international trade and WTO issues and disseminating information to the public at large through a variety of events.
        </p>
    </div>
</section>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const section1 = document.querySelector(".project-presentation-section");
        const textBlock1 = document.querySelector(".project-presentation-section .presentation-text");
        const imageBlock1 = document.querySelector(".project-presentation-section .presentation-image");

        const section2 = document.querySelector(".about-project-section");
        const textBlock2 = document.querySelector(".about-project-section .presentation-text");
        const imageBlock2 = document.querySelector(".about-project-section .presentation-image");
        const additionalImage = document.querySelector(".about-project-section .additional-image");
        const additionalText = document.querySelector(".about-project-section .additional-text");

        const newsCards = document.querySelectorAll(".news-card");
        const newsHeader = document.querySelector(".news-header");

        const observer = new IntersectionObserver(entries => {
            entries.forEach(entry => {
                if (entry.target === section1 && entry.isIntersecting) {
                    section1.classList.add("visible");
                    textBlock1.classList.add("animate-left");
                    imageBlock1.classList.add("animate-right");
                }
                if (entry.target === section2 && entry.isIntersecting) {
                    section2.classList.add("visible");
                    textBlock2.classList.add("animate-left");
                    imageBlock2.classList.add("animate-right");
                }
                if (entry.target === additionalImage && entry.isIntersecting) {
                    additionalImage.classList.add("visible");
                }
                if (entry.target === additionalText && entry.isIntersecting) {
                    additionalText.classList.add("visible");
                }
                if (entry.target === newsHeader && entry.isIntersecting) {
                    newsHeader.classList.add("visible");
                }
                if (entry.target.classList.contains("news-card") && entry.isIntersecting) {
                    entry.target.classList.add("visible");
                }
            });
        }, { threshold: 0.3 });

        if (section1) observer.observe(section1);
        if (section2) observer.observe(section2);
        if (additionalImage) observer.observe(additionalImage);
        if (additionalText) observer.observe(additionalText);
        if (newsHeader) observer.observe(newsHeader);
        newsCards.forEach(card => observer.observe(card));
    });
</script>
