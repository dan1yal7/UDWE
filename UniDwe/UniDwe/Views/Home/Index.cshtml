@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        html {
            scroll-behavior: smooth;
        }

        body, html {
            margin: 0;
            padding: 0;
            font-family: 'Merriweather', serif;
        }

        .hero-section {
            position: relative;
            height: 100vh;
            width: 100vw;
            background: url('/backround/newhd.webp') no-repeat center center;
            background-size: cover;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: white;
        }

            .hero-section::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.55);
                z-index: 1;
            }

        .hero-content {
            position: relative;
            z-index: 2;
            max-width: 800px;
            padding: 0 20px;
        }

            .hero-content h1 {
                font-size: 4.5rem;
                font-weight: 500;
                color: white;
                text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
                margin-bottom: 20px;
            }

            .hero-content p {
                font-size: 1.3rem;
                font-weight: 300;
                color: #eaeaea;
                text-shadow: 0 1px 2px rgba(0, 0, 0, 0.4);
            }

        .project-presentation-section {
            min-height: 100vh;
            background-color: #fefaf7;
            padding: 100px 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            opacity: 0;
            transform: translateY(40px);
            transition: all 0.8s ease-in-out;
        }

            .project-presentation-section.visible {
                opacity: 1;
                transform: translateY(0);
            }

        .presentation-container {
            display: flex;
            flex-wrap: wrap;
            gap: 60px;
            max-width: 1400px;
            width: 100%;
            align-items: center;
            justify-content: space-between;
        }

        .presentation-text,
        .presentation-image {
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.8s ease-in-out;
        }

            .presentation-text.animate-left,
            .presentation-image.animate-right {
                opacity: 1;
                transform: translateX(0);
            }

        .presentation-text {
            flex: 1 1 500px;
            transform: translateX(-50px);
        }

            .presentation-text h2 {
                font-size: 3rem;
                color: #222;
                margin-bottom: 25px;
            }

            .presentation-text p {
                font-size: 1.2rem;
                color: #444;
            }

        .presentation-image {
            flex: 0 1 620px;
            position: relative;
            z-index: 1;
            transform: translateX(50px);
        }

            .presentation-image::before {
                content: "";
                position: absolute;
                top: -20px;
                left: -20px;
                right: -20px;
                bottom: -20px;
                background: linear-gradient(135deg, #f4ede7, #fefcf9);
                border-radius: 16px;
                z-index: -1;
                filter: blur(25px);
                opacity: 0.8;
            }

            .presentation-image img {
                width: 100%;
                border-radius: 12px;
                box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            }

        .news-updates-section {
            min-height: 100vh;
            background: url('/backround/1.jpg') no-repeat center center;
            background-size: cover;
            padding: 100px 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 30px;
            position: relative;
        }

        .news-header {
            width: 100%;
            max-width: 1400px;
            margin: 0 auto;
            padding-left: 20px;
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.8s ease-in-out;
        }

            .news-header.visible {
                opacity: 1;
                transform: translateY(0);
            }

        .news-title {
            font-family: 'Playfair Display', serif;
            font-size: 3rem;
            font-weight: 600;
            color: #fff;
            text-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
        }

        .news-cards-wrapper {
            display: flex;
            gap: 30px;
            flex-wrap: wrap;
            justify-content: center;
            margin-top: 40px;
        }

        .news-card {
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(8px);
            border-radius: 16px;
            padding: 20px;
            max-width: 320px;
            text-align: center;
            transition: all 0.6s ease;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
            opacity: 0;
            transform: translateY(20px);
        }

            .news-card.visible {
                opacity: 1;
                transform: translateY(0);
            }

            .news-card img {
                width: 100%;
                border-radius: 12px;
                margin-bottom: 15px;
            }

            .news-card p,
            .news-card a {
                color: #f3f3f3;
                font-size: 1rem;
                margin-bottom: 10px;
                display: block;
            }

            .news-card a {
                color: #ffdca8;
                text-decoration: none;
            }

                .news-card a:hover {
                    text-decoration: underline;
                }

        media (max-width: 900px) {
            .presentation-container

        {
            flex-direction: column;
            align-items: center;
        }

        .news-cards-wrapper {
            flex-direction: column;
            align-items: center;
        }

        .news-card {
            width: 90%;
        }

        }
    </style>
}

<div class="hero-section">
    <div class="hero-content">
