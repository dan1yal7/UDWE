@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@300;400;500;700&display=swap" rel="stylesheet">

    <style>
        body, html {
            margin: 0;
            padding: 0;
            font-family: 'Merriweather', serif;
        }

        .hero-section {
            position: relative;
            height: 100vh;
            width: 100vw;
            background: url('/backround/newhd.webp') no-repeat center center;
            background-size: cover;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: white;
        }

            .hero-section::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.55); /* Уровень затемнения */
                z-index: 1;
            }

        .hero-content {
            position: relative;
            z-index: 2;
            max-width: 800px;
            padding: 0 20px;
        }

            .hero-content h1 {
                font-size: 4.5rem;
                font-weight: 500; /* Легче и мягче */
                letter-spacing: 0.5px;
                color: white;
                text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
                margin-bottom: 20px;
            }

            .hero-content p {
                font-size: 1.3rem;
                font-weight: 300;
                line-height: 1.6;
                color: #eaeaea;
                text-shadow: 0 1px 2px rgba(0, 0, 0, 0.4);
            }
    </style>
}

<div class="hero-section">
    <div class="hero-content">
        <h1>WTO Chairs Programme</h1>
        <p>The University of World Economy and Diplomacy — part of the global WTO Chairs network, advancing trade research, education, and policy dialogue in Uzbekistan.</p>
    </div>
</div>

